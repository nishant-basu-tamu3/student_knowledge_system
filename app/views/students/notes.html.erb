<!-- notes.html.erb -->
<h1>Student Notes</h1>

<% if @message.present? %>
  <div class="alert alert-info">
    <%= @message %> <!-- This will display the message "hello" -->
  </div>
<% end %>

<!-- You can add more content here if needed -->
<p>Here you can view and edit notes for the student.</p>

<!-- Example form for editing notes (optional) -->
<%= form_with(model: @student, url: update_notes_student_path(@student), method: :patch, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :notes, "Notes" %>
    <%= form.text_area :notes, value: @student.notes, class: "form-control" %>
  </div>
  <%= form.submit "Save Notes", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Students', students_path, class: 'btn btn-secondary' %>
